{
  "compilerOptions": {
    "outDir": "./out",
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    
  },
  
  "include": ["/**/*", "**/*.ts"],
  "exclude": [
      "node_modules",
      "dist",
      ".vscode"
  ],

  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}